{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "allowJs": false,
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
